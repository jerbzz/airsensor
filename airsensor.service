[Unit]
Description=Airsensor Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/opt/airsensor
ExecStart=/opt/airsensor/.venv/airsensor/bin/python /opt/airsensor/src/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
