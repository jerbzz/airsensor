[Unit]
Description=CO2 Monitor Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/co2-monitor
ExecStart=/usr/bin/python3 /home/pi/co2-monitor/src/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
